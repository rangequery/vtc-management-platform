{% extends 'base.html.twig' %}
{% set title = 'Status' %}
{% block title %}{{ title }}{% endblock %}

{% block body %}

<div class="container-fluid">
    {% include '_partials/_title_header.html.twig' with {
        title: 'ðŸ’¬ ' ~ title,
        linkPath: path('app_status_new')
    } %}

    <table class="table my-0 table-bordered" id="dataTable">
        <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td>{{ status.id }}</td>
                <td>{{ status.nom }}</td>

                    {% include '_partials/_table_edit_button.html.twig' with {
                        'show_route': 'app_status_show',
                        'edit_route': 'app_status_edit',
                        'id_name': 'id',
                        'id_value': status.id
                    } %}

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    {# Modal frame global #}
    {% include '_partials/_modal_new.html.twig' with { 'edit_route': 'status' } %}
    {% include '_partials/_modal_edit.html.twig' %}

    <script>
        function openModal(id) {
            const url = id ? `/private/status/${id}/edit` : '/new';
            fetch(url)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('modal-edit').querySelector('.modal-content').innerHTML = data;
                    const modal = new bootstrap.Modal(document.getElementById('modal-edit'));
                    modal.show();
                })
                .catch(error => console.error('Erreur:', error));
        }
    </script>
{% endblock %}
