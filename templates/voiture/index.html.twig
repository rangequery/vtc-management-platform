            <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.id }}</td>
                    <td>{{ voiture.marque }}</td>
                    <td>{{ voiture.model }}</td>
                    <td>{{ voiture.immatriculation }}</td>

                    {% include '_partials/_table_edit_button.html.twig' with {
                        'show_route': 'app_voiture_show',
                        'edit_route': 'app_voiture_edit',
                        'id_name': 'id',
                        'id_value': voiture.id
                    } %}

                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
