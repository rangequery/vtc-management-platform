{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    {% set title = 'ðŸš˜ Voiture' %}                 {# DÃ©finir le titre #}
    {% set linkPath = path('app_voiture_new') %}   {# DÃ©finir le chemin #}

    {% include '_partials/_header.html.twig' with {
        title: title,
        linkPath: linkPath
    } %}
    <div class="container-fluid">
        <table class="table my-0 table-bordered" id="dataTable">
            <thead class="table-primary">
            <tr>
                <th>#</th>
                <th>Marque</th>
                <th>Model</th>
                <th>Immatriculation</th>
                <th class="text-center">Actions</th>
            </tr>
